<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h1>Students</h1>
        
        <% if (typeof course !== 'undefined' && course) { %>
            <h2>Course: <%= course %></h2>
        <% } %>

        <hr />

        <% if (message) { %>
            <div class="alert alert-info"><%= message %></div>
        <% } %>

        <% if (students && students.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Student #</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.studentNum %></td>
                            <td><%= student.firstName %></td>
                            <td><%= student.lastName %></td>
                            <td><%= student.email %></td>
                            <td>
                                <a href="/student/<%= student.studentNum %>" class="btn btn-info btn-sm">View</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-warning">No students found</div>
        <% } %>

        <a href="/students/add" class="btn btn-success">Add New Student</a>
    </div>
</body>
</html>